<% @people.each_with_index do |person, index| %>
  <%= content_tag :li, :class => "event item team #{spine_position(index)}" do %>
      <div class="<%= "pointer  #{spine_position(index)} team"%>">
        <h4 class="<%= spine_position(index) %>"><%= @current_team.name %></h4>
      </div>
      <p><%= person.name %></p>
        <img src="<%= person.avatar_url %>" style="border-radius: 5px">
  <% end %>
  <div class="clear-<%= spine_position(index) %>"></div>

<% end %>