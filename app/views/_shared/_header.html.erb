<!-- 
<div id="headline">Welcome to The Flatiron School Teamline - <a href="/auth/github">Sign up to add your info to the timeline</a>.</div>
 -->
<div class="container">
  <div class="four columns alpha">
    <a href="/">
      <h1 id="logo-top">
      Teamline - a timeline for teams.
      </h1>
    </a>
  </div>
  <div class="eight columns">
    <div id="filters">
      <ul>
        <a href="#">
          <li class="dates"><h2>Dates</h2></li>
        </a>    
        <a href="#">
          <li class="events"><h2>Events</h2></li>
        </a>
        <a href="#">
          <li class="people"><h2>People</h2></li>
        </a>
      </ul>
    </div>
   </div>
  <div class="four columns omega">
    <div id="nav">

<% if current_user %>
  Signed in as <%= current_user.name %>!
  <%= link_to "Sign out", signout_path %>
<% else %>
  <a href="/auth/github"><p id="signup">Sign Up</p></a>
<% end %>
  
    <a href="#">
      <p id="learnmore">Learn More</p>
    </a>
    </div>
  </div>

  <div class="row clearfix"></div>

    <div class="sixteen columns">
      <div class="dates-expand">
        <form>

        </form>
      </div>

    <%= form_tag('/timeline/filter', :method => :get, :remote => true, :id => 'filterForm' ) %>
      <% Person.all.each do |person| %>
        <%= check_box_tag 'filter[person_ids][]', person.id -%>
        <%= h person.name -%>
      <% end %><br>
      <% Timeline::Events.each do |event| %>
        <%= check_box_tag 'filter[type][]', event -%>
        <%= h event -%>
      <% end %>
      <%= text_field_tag 'start_of' %>
    <%= submit_tag "Submit" %>

    <div class="events-expand">
     <form id="resourcefilter" style="width: 500px;">
      </form>
    </div>

      <div class="people-expand">

      </div>
    </div>

  <div class="row clearfix"></div>

</div><!-- end container -->

<script type="text/javascript"> 
    $("li.dates").click(function() {
      $('.dates-expand').show('slow');
      $('.events-expand').hide('slow');
      $('.people-expand').hide('slow');
    });
    $("li.events").click(function() {
      $('.dates-expand').hide('slow');
      $('.events-expand').show('slow');
      $('.people-expand').hide('slow');
    });
    $("li.people").click(function() {
      $('.dates-expand').hide('slow');
      $('.events-expand').hide('slow');
      $('.people-expand').show('slow');
    });
</script>