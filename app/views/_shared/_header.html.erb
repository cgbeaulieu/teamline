<div class="container">
  <div class="four columns alpha">
    <a href="/">
      <h1 id="logo-top">
      Teamline - a timeline for teams.
      </h1>
    </a>
  </div>
  <div class="eight columns">
    <div id="filters">
      <ul>
        <a href="#">
          <li class="dates"><h2>Dates</h2></li>
        </a>    
        <a href="#">
          <li class="events"><h2>Events</h2></li>
        </a>
        <a href="#">
          <li class="people"><h2>People</h2></li>
        </a>
      </ul>
    </div>
   </div>
  <div class="four columns omega">
    <div id="nav">

<% if current_user %>
  Signed in as <%= current_user.name %>!
  <%= link_to "Sign out", signout_path %>
<% else %>
  <a href="/auth/github"><p id="signup">Sign Up</p></a>
<% end %>
  
    <a href="#">
      <p id="learnmore">Learn More</p>
    </a>
    </div>
  </div>

  <div class="row clearfix"></div>

    <div class="sixteen columns">
      <div class="dates-expand">
        <form>
          <fieldset>
              <input class="datepicker filter" name="custom_date" type="date">
              <!-- <input type="hidden" name="custom_date_hidden" value> -->
              <!-- <button type="button" class="filterbutton">Filter Date</button> -->
          </fieldset>
        </form>
      </div>

      <div class="events-expand">
 <form id="resourcefilter"> 
  <fieldset>
    <% Timeline::Events.each do |event| %>
      <%= content_tag :input, :type => "checkbox", :class => "filter", :id => "#{event}", :value => "#{event}" do %>
      <span><%= "#{event}" %></span>
      <% end %>
    <% end %>
  </fieldset>
  <button type="submit" style="margin-top:20px; margin-left:75px;">Filter Events</button>
</form>
 
      </div>

      <div class="people-expand">
 <form id="peoplefilter">
    <fieldset>
      <% Person.all.each do |person|%>
        <%= content_tag :input, :type => "checkbox", :class => "filter", :id =>"#{person.id}", :value => "#{person.name}" do-%>
        <span><%= "#{person.name}" %></span>
        <% end %>
      <% end %>
    </fieldset>
    <button type="submit">Filter People</button>
  </form>
      </div>
    </div>

  <div class="row clearfix"></div>

</div><!-- end container -->

<script type="text/javascript"> 
    $("li.dates").click(function() {
      $('.dates-expand').show('slow');
      $('.events-expand').hide('slow');
      $('.people-expand').hide('slow');
    });
    $("li.events").click(function() {
      $('.dates-expand').hide('slow');
      $('.events-expand').show('slow');
      $('.people-expand').hide('slow');
    });
    $("li.people").click(function() {
      $('.dates-expand').hide('slow');
      $('.events-expand').hide('slow');
      $('.people-expand').show('slow');
    });
</script>