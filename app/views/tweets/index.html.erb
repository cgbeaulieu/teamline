
  <div class="container">
    <%= image_tag "twitter.png", {:align => "left", :size => "110x120"}  %>
    <h2>The Flatiron School<br/>
      Student Tweets</h2></a>
    

    <div id="timelineContainer">

      <div class="timelineToggle"><p><a class="expandAll">+ expand all</a></p></div>

      <br class="clear">

      <% @tweets.each do |tweet| %>

      <div class="timelineMajor">
        <h2 class="timelineMajorMarker"><span><%= time_ago_in_words(tweet.published_at) %> ago</span></h2>
        <dl class="timelineMinor">
          <dt id="<%= tweet.id %>"><a>Tweet: <%= raw(tweet.content) %></a></dt>
          <dd class="timelineEvent" id="<%= tweet.id %>EX" style="display: none; ">
            <p><%= link_to "@#{tweet.handle}", "http://twitter.com/#{tweet.handle}" %></p>
              <br class="clear">
          </dd><!-- /.timelineEvent -->    
        </dl><!-- /.timelineMinor -->
     </div><!-- /.timelineMajor -->

      <br class="clear">

      <% end %>
    </div>
  </div>

