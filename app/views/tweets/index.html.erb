<h1>Listing tweets</h1>

<table>
  <tr>
    <th>Content</th>
    <th>Published at</th>
    <th>Handle</th>
  </tr>

<% @tweets.each do |tweet| %>
  <tr>
    <td><%= raw(tweet.content) %></td>
    <td><%= tweet.published_at %></td>
    <td><%= link_to "@#{tweet.handle}", "http://twitter.com/#{tweet.handle}" %></td>
  </tr>
<% end %>
</table>

