      </ol>
    </div>
  </div>


<script type="text/javascript">
    $(function(){
      $( '[type=date], .datepicker' ).pickadate({
          date_min: [ 2012, 10, 02 ],
          date_max: true,
          format_submit: 'yyyy-mm-dd'
      })  
    });

</script>
